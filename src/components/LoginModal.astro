---
import { Button } from '@/components/ui/button'; // Adjust path if necessary

interface Props {
  isOpen: boolean; // Still accept isOpen to apply initial classes
}

const { isOpen } = Astro.props;
---

<div id="login-modal" class={`fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm transition-opacity duration-300 ${isOpen ? 'opacity-100 pointer-events-auto' : 'opacity-0 pointer-events-none'}`}>
  <div class={`bg-white dark:bg-slate-800 rounded-lg shadow-xl w-full max-w-md mx-4 transition-transform duration-300 ${isOpen ? 'scale-100' : 'scale-95'}`} id="login-modal-content">
    <div class="flex items-center justify-between p-6 border-b border-slate-200 dark:border-slate-700">
      <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Login to EversPass</h2>
      <button class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-300" data-close-modal>
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <form class="p-6 space-y-4" data-login-form>
      <div>
        <label for="login-email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Email</label>
        <input type="email" id="login-email" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 dark:bg-slate-700 dark:text-white" placeholder="Enter your email" required>
      </div>
      <div>
        <label for="login-password" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Password</label>
        <input type="password" id="login-password" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 dark:bg-slate-700 dark:text-white" placeholder="Enter your password" required>
      </div>
      <div class="flex items-center justify-between">
        <label class="flex items-center">
          <input type="checkbox" class="rounded border-slate-300 dark:border-slate-600 text-sky-600 focus:ring-sky-500">
          <span class="ml-2 text-sm text-slate-600 dark:text-slate-400">Remember me</span>
        </label>
        <a class="text-sm text-sky-600 dark:text-sky-400 hover:underline">Forgot password?</a>
      </div>
      <div class="py-2">
        <Button
          disabled
          type="submit"
          variant="primary-cta"
          size="default"
          rounded="md"
          className="w-full"
          client:load>
          Sign In
        </Button>
      </div>
    </form>
    <div class="px-6 pb-6 text-center">
      <p class="text-sm text-slate-600 dark:text-slate-400">
        Don't have an account?
        <Button
          type="button"
          variant="link"
          size="default"
          data-switch-to-signup
          className="inline-block px-0 py-0 h-auto"
          client:load>
          Sign up
        </Button>
      </p>
    </div>
  </div>
</div>

<script>
  document.addEventListener('astro:page-load', () => {
    const loginModal = document.getElementById('login-modal');
    if (!loginModal) return;

    const modalContent = loginModal.querySelector('#login-modal-content');
    const closeButton = loginModal.querySelector('[data-close-modal]');
    const switchToSignupButton = loginModal.querySelector('[data-switch-to-signup]');
    const loginForm = loginModal.querySelector('[data-login-form]');

    // Function to dispatch a custom event
    const dispatchModalEvent = (eventName) => {
      loginModal.dispatchEvent(new CustomEvent(eventName, { bubbles: true }));
    };

    // Close on button click
    closeButton?.addEventListener('click', () => dispatchModalEvent('modal:close'));

    // Switch to signup
    // The event listener is now directly on the Button component, but
    // since we're giving it the data-switch-to-signup attribute,
    // the querySelector still works.
    switchToSignupButton?.addEventListener('click', () => dispatchModalEvent('modal:switchToSignup'));

    // Close on backdrop click
    loginModal.addEventListener('click', (event) => {
      if (event.target === loginModal) {
        dispatchModalEvent('modal:close');
      }
    });

    // Handle form submission
    loginForm?.addEventListener('submit', (event) => {
      event.preventDefault();
      console.log('Login form submitted from component');
      // You can add your actual login logic here
      dispatchModalEvent('modal:close'); // Close modal after submission (or on success)
    });

    // Handle Escape key (centralized in parent for all modals)
  });
</script>