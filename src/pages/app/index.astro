---
import SessionContent from "@/components/SessionContent/SessionContent";
import DynamicLayout from "@/layouts/DynamicLayout.astro";
import type { User } from "@/types/user";

const { userId } = Astro.locals.auth();

if (!userId) {
  Astro.redirect('/');
}

const user: User = {
  id: userId!,
}
---

<DynamicLayout>
  <SessionContent client:only="react" user={user} />
</Layout>