---
import '@/styles/global.css'
import { ClientRouter } from "astro:transitions";
import AuthNavbar from '@/components/AuthNavbar.astro';
import ClientScripts from '@/components/ClientScripts.astro';

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>{title || 'EversPass'}</title>
    <ClientRouter />
  </head>
  <body class="bg-white dark:bg-slate-950 text-slate-800 dark:text-slate-200 antialiased">

    <AuthNavbar />

    <main class="pt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </div>
    </main>

  </body>
  
  <!-- Client Scripts Component handles all JavaScript -->
  <ClientScripts isAuth={true} />
  
  <!-- Toast notifications -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/izitoast/dist/css/iziToast.min.css">
  <script src="https://cdn.jsdelivr.net/npm/izitoast/dist/js/iziToast.min.js"></script>

</html>